 
{
    "manifest_version": 3,
    "name": "My First Extension",
    "version": "1.0",
    "description": "A simple Chrome extension.",
    "icons": {
      "48": "icon.png"
    },
    "background": {
        "service_worker": "script.js"
      },
    "permissions": ["activeTab", "scripting"],
    "content_scripts": [
        {
          "js": ["other.js"],
          "matches": [
            "https://*/*"
          ]
        }
    ],
    "host_permissions": [
        "https://*/*"
    ],

    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }