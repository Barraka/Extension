 
{
    "manifest_version": 3,
    "name": "Enhance reading",
    "version": "1.0",
    "description": "Darkmode & Extract text",
    "icons": {
      "48": "icon.png"
    },
    "background": {
        "service_worker": "serviceWorker.js",
        "type": "module"
      },
    "permissions": ["activeTab", "scripting", "tabs", "contextMenus"],

    "host_permissions": [
        "https://*/*",
        "<all_urls>"
    ],
    "content_scripts": [
        {
          "js": ["contentScript.js"],
          "matches": [
            "https://*/*",
            "<all_urls>"
          ]
        }
    ],
      

    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }